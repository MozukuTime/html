<!DOCTYPE html>
<html>
<body>

<h2>値を10倍にする</h2>

<input type="number" id="inputValue" placeholder="数値を入力">
<button onclick="multiplyByTen()">計算</button>

<p>結果: <span id="result"></span></p>

<script>
function multiplyByTen() {
  var input = document.getElementById('inputValue').value;
  var url = 'https://script.google.com/macros/s/AKfycbzEdPdIxHDuwTntnDbXHHdcsIsqyLHHult0mrdfPjE8KmuPslhnbQ4Cq8B8qntg8l3QuQ/exec'; // ここにあなたのウェブアプリケーションのURLを設定

  fetch(url + '?value=' + input)
    .then(response => response.text())
    .then(data => {
      document.getElementById('result').textContent = data;
    })
    .catch(error => console.error('エラー:', error));
}
</script>

</body>
</html>
